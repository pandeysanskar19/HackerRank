string counterGame(long n) {
 int moves = 0;
    while (n > 1) {
        // Check if n is power of 2
        if ((n & (n - 1)) == 0) {
            n >>= 1; // divide by 2
        } else {
            // subtract largest power of 2 less than n
            long p = 1L << (63 - __builtin_clzl(n)); 
            n -= p;
        }
        moves++;
    }
    return (moves % 2 == 1) ? "Louise" : "Richard";
}
